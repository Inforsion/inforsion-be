{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
